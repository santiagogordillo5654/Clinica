<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.clinica.Controladores.ListarCitasControlador">

    <Label text="Lista de Citas" textFill="#0f0f0f">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <TableView fx:id="tablaCitas" VBox.vgrow="ALWAYS" >
        <columns>
            <TableColumn fx:id="colPaciente" text="Paciente" />
            <TableColumn fx:id="colFecha" text="Fecha" />
            <TableColumn fx:id="colServicio" text="Servicio"  />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>
